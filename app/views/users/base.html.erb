<% provide(:title, "Base") %>
<% provide(:class_text, 'base') %>
<% provide(:button_text, '更新') %>


    <h1>基本情報の更新</h1>

    <div class="modal-body">
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <% if current_user.admin? %>
         
          <%= form_with(url: update_base_user_path(@users), remote: true, local: true, method: :patch) do |f| %>

            <%= f.label :指定勤務時間, class: "label-#{yield(:class_text)}" %>
            <%= f.time_field :work_time, class: "form-control" %>
            
            <br>
            
     
            <%= f.label :基本勤務時間, class: "label-#{yield(:class_text)}" %>
            <%= f.time_field :basic_time, class: "form-control" %>


            <div class="center"><br>
              <% if current_user == @user || current_user.admin? %>
              <%= f.submit yield(:button_text), class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
              <% end %>
            </div>
            
          <% end %>
            
          <% end %>
        </div>
      </div>
    </div>
    

