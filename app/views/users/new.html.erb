<% provide(:title, 'Sign up') %>
<h1>アカウント情報の更新</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :"名前", class: "label-signup" %>
      <%= f.text_field :"名前", class: "form-control" %>

      <%= f.label :"メールアドレス", class: "label-signup" %>
      <%= f.email_field :"メールアドレス", class: "form-control" %>
      
      <%= f.label :"所属", class: "label-signup" %>
      <%= f.group_field :"所属", class: "form-control" %>

      <%= f.label :"パスワード", class: "label-signup" %>
      <%= f.password_field :"パスワード", class: "form-control" %>

      <%= f.label :"パスワード確認", class: "label-signup" %>
      <%= f.password_field :"パスワード確認", class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-block btn-signup" %>
    <% end %>
  </div>
</div>